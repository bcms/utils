{
    "compilerOptions": {
        "module": "es2020",
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "jsx": "react",
        "target": "ES2020",
        "outDir": "./dist/mjs",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "verbatimModuleSyntax": true,
        "paths": {
            "@thebcms/components-react": ["./src"],
            "@thebcms/components-react/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
