{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "declarationMap": false,
        "sourceMap": false,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "target": "ES2020",
        "outDir": "./dist/cjs",
        "baseUrl": "./",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Node",
        "paths": {
            "@thebcms/mcp": ["./src"],
            "@thebcms/mcp/*": ["./src/*"],
            "@thebcms/client": ["../client/src"],
            "@thebcms/client/*": ["../client/src/*"]
        }
    },
    "include": ["src"]
}

