    "devDependencies": {
        "@types/node": "^22.5.5",
        "eslint": "^10.0.2",
        "nodemon": "^3.1.14",
        "prettier": "^3.8.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.56.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bcms/utils"
