    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^22.5.5",
        "@types/uuid": "^11.0.0",
        "env-cmd": "^11.0.0",
        "eslint": "^10.0.2",
        "prettier": "^3.8.1",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typedoc": "^0.0.4",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.56.1"
